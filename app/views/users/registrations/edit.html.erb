<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row d-inline-flex">
    <%= f.label :Useremail, class:"user-title" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"user-email" %>
  </div>
<br>
 <div class="row d-inline-flex">
      <%= f.label :firstName , class:"user-title"%><br />
      <%= f.text_field :firstName, autofocus: true , class:"user-email"%>
  </div>
<br>
 <div class="row d-inline-flex">
      <%= f.label :lastName , class:"user-title"%><br />
      <%= f.text_field :lastName, autofocus: true , class:"user-email"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
<br>
 <div class="row d-inline-flex">
    <%= f.label :password, class:"user-title" %> <i>  </i><br />
    <%= f.password_field :password, autocomplete: "new-password" , class:"user-email",placeholder:"6 character minimum"%>
    <% if @minimum_password_length %>
      <br />
     
    <% end %>
  </div>
<br>
 <div class="row d-inline-flex">
    <%= f.label :password_confirmation, class:"mr-1 user-title" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"user-email" %>
  </div>
<br>
 <div class="row d-inline-flex">
    <%= f.label :current_password %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"ml-5 user-email" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Update", class:"mt-5 update-button" %>
  </div>
<% end %>


<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"my-5 cancel-button" %>

<%= link_to "Back", :back %>
