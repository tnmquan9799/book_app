<br>
    <%= form.text_area :description ,placeholder:"Comment", class:"review-form-description"%>

  <%= form.hidden_field :book_id %> 
  <%= form.hidden_field :user_id , :value => current_user.id %>
</div>
  <div class="actions">
    <%= form.submit 'Upload Review',class:"create-review-button"%>
  </div>
<% end %>
